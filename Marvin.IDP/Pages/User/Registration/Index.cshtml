@page
@using System.Globalization
@model IdentityServer.Pages.User.Registration.IndexModel

<div class="page-header">
    <div class="lead">
        <h1>User Registration</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <form asp-route="Login">
                <input type="hidden" asp-for="Input.ReturnUrl" />

                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input class="form-control" placeholder="Username" asp-for="Input.Username" autofocus>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                </div>
                <div class="form-group">
                    <label asp-for="Input.GivenName"></label>
                    <input type="text" class="form-control" placeholder="Given Name" asp-for="Input.GivenName">
                </div>
                <div class="form-group">
                    <label asp-for="Input.FamilyName"></label>
                    <input type="text" class="form-control" placeholder="Family Name" asp-for="Input.FamilyName">
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="Input.Email">
                </div>

                <div class="form-group">
                    <label asp-for="Input.Country"></label>
                    <select class="form-control" asp-items="@Model.Input.CountryList" asp-for="Input.Country"></select>
                </div>

                <button class="btn btn-primary" name="Input.Button" value="create">Register</button>
                <button class="btn btn-secondary" name="Input.Button" value="cancel">Cancel</button>
            </form>
        </div>

    </div>
</div>

@{
}
